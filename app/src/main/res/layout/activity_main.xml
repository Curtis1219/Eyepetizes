<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.eyepetizer.MainActivity">

    <RadioGroup
        android:id="@+id/activity_main_radioGroup_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:id="@+id/activity_main_bottom_discover"
            android:drawableTop="@drawable/download_bg"
            android:text="精选"
            style="@style/main_radioButton_style"/>
        <RadioButton
            android:id="@+id/activity_main_bottom_subscribe"
            android:text="发现"
            android:drawableTop="@drawable/discover_bg"
            style="@style/main_radioButton_style"/>

        <RadioButton
            android:id="@+id/activity_main_bottom_download"
            android:text="关注"
            android:drawableTop="@drawable/personal_bg"
            style="@style/main_radioButton_style"/>

        <RadioButton
            android:id="@+id/activity_main_bottom_personal"
            android:text="我的"
            android:drawableTop="@drawable/subscribe_bg"
            style="@style/main_radioButton_style"/>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_main_radioGroup_bottom"></FrameLayout>
</RelativeLayout>
